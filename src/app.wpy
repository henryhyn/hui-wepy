<script>
  import wepy from 'wepy';

  export default class extends wepy.app {
    config = {
      pages: [
        'pages/index'
      ]
    };

    globalData = {
      userInfo: null
    };

    getUserInfo (cb) {
      wepy.getUserInfo({
        success (res) {
          cb && cb(res.userInfo);
        }
      });
    }
  }
</script>
